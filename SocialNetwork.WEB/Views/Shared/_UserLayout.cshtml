<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Social Network</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <li class="active">@Html.ActionLink("Personal Page", "Index", "User", null, htmlAttributes: new { @class = "navbar-brand" })</li>
        </div>
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Friends", "Index", "Friend")</li>
            <li>@Html.ActionLink("Messages", "Index", "Message")</li>
            <li>@Html.ActionLink("Profile Settings", "Settings", "User")</li>
            @Html.Partial("_LoginPartial");
            <li>
                @using (Html.BeginForm("SearchUsers", "Search", FormMethod.Post, htmlAttributes: new { @class = "form-inline" }))
                {
                    <div class="form-group">
                        <input type="text" name="criterion" class="form-control" id="criterion" placeholder="Enter criterion">
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                }
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Hello, " + User.Identity.Name + "!", "Index", "User", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
            <li>@Html.ActionLink("Log off", "LogOff", "Account", routeValues: null, htmlAttributes: new { title = "Log of" })</li>
        </ul>
    </div>
</nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Social Network Project</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>